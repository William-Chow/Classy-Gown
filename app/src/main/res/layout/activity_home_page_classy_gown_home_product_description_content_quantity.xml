<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/home_page_home_product_description_activity_color_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_1sdp">

        <RelativeLayout
            android:id="@+id/rlMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/product_description_square">

            <TextView
                android:id="@+id/tvMinus"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/minus"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/product_description_square_text">

            <TextView
                android:id="@+id/tvValue"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/home_page_home_product_description_activity_color_text"
                android:textSize="@dimen/_18sdp"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rlPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/product_description_square">

            <TextView
                android:id="@+id/tvPlus"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/plus"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>