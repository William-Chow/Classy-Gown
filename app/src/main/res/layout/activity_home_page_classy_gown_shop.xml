<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/home_page_shop_color_background">

    <ProgressBar
        android:id="@+id/pbLoadingShopProduct"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:indeterminate="true"
        android:progressDrawable="@drawable/circular_progress_view"
        android:indeterminateDrawable="@drawable/circular_progress_view"/>

    <RelativeLayout
        android:id="@+id/rlShopRecycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/mShopSwipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/shop_grid_view_recycle_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </android.support.v4.widget.SwipeRefreshLayout>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/pbLoadingMoreShopProduct"
        android:layout_width="@dimen/_40sdp"
        android:layout_alignParentBottom="true"
        android:layout_height="@dimen/_40sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:indeterminate="true"
        android:progressDrawable="@drawable/circular_progress_view"
        android:indeterminateDrawable="@drawable/circular_progress_view"/>
</RelativeLayout>