<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/home_page_more_return_policy_activity_color_background">

    <TextView
        android:id="@+id/tvReturnAndExchangesTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:text="@string/home_page_more_return_policy_title_content_capital_1"
        android:textColor="@color/home_page_more_about_activity_color_header_text"
        android:textSize="@dimen/_14sdp" />

    <TextView
        android:id="@+id/tvReturnAndExchangesContent_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvReturnAndExchangesTitle"
        android:layout_marginBottom="@dimen/_5sdp"
        android:text="@string/home_page_more_return_policy_title_content_1"
        android:textColor="@color/home_page_more_about_activity_color_content_text"
        android:textSize="@dimen/_14sdp" />

    <TextView
        android:id="@+id/tvReturnAndExchangesContent_1_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvReturnAndExchangesContent_1"
        android:layout_marginBottom="@dimen/_5sdp"
        android:text="@string/home_page_more_return_policy_title_content_1_1"
        android:textColor="@color/home_page_more_about_activity_color_content_text"
        android:textSize="@dimen/_14sdp" />

    <TextView
        android:id="@+id/tvReturnAndExchangesContent_1_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvReturnAndExchangesContent_1_1"
        android:layout_marginBottom="@dimen/_5sdp"
        android:text="@string/home_page_more_return_policy_title_content_1_2"
        android:textColor="@color/home_page_more_about_activity_color_content_text"
        android:textSize="@dimen/_14sdp" />

    <TextView
        android:id="@+id/tvReturnAndExchangesContent_1_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvReturnAndExchangesContent_1_2"
        android:layout_marginBottom="@dimen/_5sdp"
        android:text="@string/home_page_more_return_policy_title_content_1_3"
        android:textColor="@color/home_page_more_about_activity_color_content_text"
        android:textSize="@dimen/_14sdp" />

</RelativeLayout>