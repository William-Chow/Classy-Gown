<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_page_home_recent_product_background_color">

    <LinearLayout
        android:id="@+id/llProductItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".6">

            <ImageView
                android:id="@+id/ivProductImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:background="@drawable/shopping_cart"/>

            <ImageView
                android:id="@+id/ivSalesTag"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="end|bottom"
                android:layout_marginBottom="@dimen/_10sdp"
                android:src="@drawable/sales_tag"/>

        </FrameLayout>

        <RelativeLayout
            android:id="@+id/rlRecentProductInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".4">

            <TextView
                android:id="@+id/tvProductTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_2sdp"
                android:textColor="@color/home_page_home_recent_product_text_color"
                android:textSize="@dimen/_13sdp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvProductTitle">

                <RelativeLayout
                    android:id="@+id/rlSplitPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_2sdp">

                    <TextView
                        android:id="@+id/tvPrice_Strike_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/home_page_home_recent_product_text_color"
                        android:textSize="@dimen/_11sdp"/>

                    <TextView
                        android:id="@+id/tvPrice_Strike_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/tvPrice_Strike_1"
                        android:layout_toRightOf="@+id/tvPrice_Strike_1"
                        android:textColor="@color/home_page_home_recent_product_text_color"
                        android:textSize="@dimen/_11sdp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlSplitPrice_NextLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_2sdp">

                    <TextView
                        android:id="@+id/tvPrice_NextLine_Strike_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/home_page_home_recent_product_text_color"
                        android:textSize="@dimen/_11sdp"/>

                    <TextView
                        android:id="@+id/tvPrice_NextLine_Strike_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvPrice_NextLine_Strike_1"
                        android:textColor="@color/home_page_home_recent_product_text_color"
                        android:textSize="@dimen/_11sdp"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvProductPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_2sdp"
                    android:textColor="@color/home_page_home_recent_product_text_color"
                    android:textSize="@dimen/_11sdp"/>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>